<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fullcourse.buylist.mapper.BuyListMapper">
    <select id="findByMemberNumPaginated" resultType="com.fullcourse.buylist.BuyListVO">
        SELECT *
        FROM buylist
        WHERE member_num = #{memberNum}
        ORDER BY buy_date DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="findByBuyNum" resultType="com.fullcourse.buylist.BuyListVO">
        SELECT *
        FROM buylist
        WHERE buy_num = #{buyNum}
    </select>

    <select id="getTotalCount" resultType="int">
        SELECT COUNT(*)
        FROM buylist
        WHERE member_num = #{memberNum}
    </select>
</mapper>