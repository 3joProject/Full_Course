<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fullcourse.product.mapper.ProductMapper">
	
	<insert id="insertOK" parameterType="com.fullcourse.product.ProductVO">
		insert into
		product(productTitle,productPrice,productContent,productInventory)
		values(#{productTitle},#{productPrice},#{productContent},#{productInventory})
	</insert>
	
	<update id="updateOK" parameterType="com.fullcourse.product.ProductVO">
		update product set productTitle=#{productTitle},productPrice=#{productPrice},productContent=#{productContent},productInventory=#{productInventory}
		where productNum=#{productNum}
	</update>
	
	<delete id="deleteOK" parameterType="com.fullcourse.product.ProductVO">
		delete from product where productNum=#{productNum}
	</delete>
	
	<select id="selectAll" resultType="com.fullcourse.product.ProductVO">
		select * from product order by productNum desc
	</select>
	
	<select id="selectOne" resultType="com.fullcourse.product.ProductVO">
		select * from product where
		productNum=#{productNum}
	</select>
	
	<select id="searchListMid" resultType="com.fullcourse.product.ProductVO">
		select * from product where productMid like #{searchWord}
	</select>

	<select id="searchListTitle" resultType="com.fullcourse.product.ProductVO">
		select * from product where prouductTitle like #{searchWord}
	</select>
	
	<select id="selectAllPageBlock" resultType="com.fullcourse.product.ProductVO">
		select * from product 
		order by productNum desc limit #{startRow},#{pageBlock}
	</select>
	
	<select id="searchListMid_PAGE" resultType="com.fullcourse.product.ProductVO">
		select * from product
		where productMid like #{searchWord} 
		order by productNum desc limit #{startRow},#{pageBlock}
	</select>
	
	<select id="searchListTitle_PAGE" resultType="com.fullcourse.product.ProductVO">
		select * from product
		where productTitle like #{searchWord} 
		order by productNum desc limit #{startRow},#{pageBlock}
	</select>
	
	<select id="getTotalRows"	resultType="int">
		select count(*) total_rows from product
	</select>
	
	<select id="search_total_rows_Mid"	resultType="int">
		select count(*) total_rows from product where productMid like #{searchWord}
	</select>

	<select id="search_total_rows_Title"	resultType="int">
		select count(*) total_rows from product where productTitle like #{searchWord}
	</select>

</mapper>